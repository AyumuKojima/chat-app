<div class="chat_header">
  <div class="current_room_name">
    テスト１
  </div>
  <div class="end_chat_btn">
    <a href="#">チャットを終了する</a>
  </div>
</div>

<div class="chat_middle">
  <div class="chat">
    <div class="chat_info">
      <div class="name">
        Tom
      </div>
      <div class="date">
        2020/3/31(Wed) 12:43:30
      </div>
    </div>
    <div class="message">
      <div class="message_info">
        おはようございます。
      </div>
    </div>
  </div>
  <div class="chat">
    <div class="chat_info">
      <div class="name">
        Risa
      </div>
      <div class="date">
        2020/3/31(Wed) 12:45:50
      </div>
    </div>
    <div class="message">
      <div class="message_info">
        おはよう！
      </div>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="chat_footer">
    <div class="input_message">
      <%= f.text_field :content, class: 'message_form', placeholder: 'type a message'%>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
    <%= f.submit '送信', class: 'submit_btn'%>
  </div>
<%end%>